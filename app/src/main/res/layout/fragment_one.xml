<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".homepage.fragment.onefragment.OneFragment">

        <RelativeLayout
            android:id="@+id/recycleone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lefticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/common_nav_btn_menu_n_hdpi" />
            <TextView
                android:id="@+id/righticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_nav_btn_search_n_hdpi" />
        </RelativeLayout>
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/onefragmentrecycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/recycleone2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lefticon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/common_nav_btn_menu_n_hdpi" />
        <TextView
            android:id="@+id/righticon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_nav_btn_search_n_hdpi" />
    </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/onefragmentrecycle1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>